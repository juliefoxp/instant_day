 <!-- “Omvendt” parallax: galleriet bevæger sig opad mens man scroller ned -->
<script>
(() => {
  const viewport = document.getElementById('gallery-viewport');
  const gallery  = document.getElementById('gallery');
  let startY = 0;
  let maxTranslate = 0;
  let endScrollY = 0;
  let ticking = false;
  const bottomMargin = 80; // lidt mere "breathing room"

  function docHeight() {
    return Math.max(document.body.scrollHeight, document.documentElement.scrollHeight);
  }
  function vpHeight() {
    return window.innerHeight || document.documentElement.clientHeight;
  }

  function recalc() {
    const rect = viewport.getBoundingClientRect();
    startY = window.scrollY + rect.top;

    // inkluderer spacer -> gør det muligt at translater helt til bunden
    maxTranslate = Math.max(0, gallery.scrollHeight - viewport.clientHeight);

    // sørg for endScrollY ikke er mindre end startY
    endScrollY = Math.max(startY, docHeight() - vpHeight() - bottomMargin);

    apply();
  }

  function apply() {
    const y = window.scrollY;
    const span = Math.max(1, endScrollY - startY);
    const progress = Math.min(1, Math.max(0, (y - startY) / span));
    const translate = -maxTranslate * progress;
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    gallery.style.transform = prefersReduced ? 'none' : `translateY(${translate}px)`;
  }

  function onScroll() {
    if (!ticking) {
      requestAnimationFrame(() => { apply(); ticking = false; });
      ticking = true;
    }
  }

  // INIT
  recalc();

  // events
  window.addEventListener('scroll', onScroll, { passive: true });
  window.addEventListener('resize', recalc);
  window.addEventListener('orientationchange', recalc);
  window.addEventListener('load', () => { recalc(); setTimeout(recalc, 200); });

  // hvis billeder loader senere, genberegn når de er færdige
  gallery.querySelectorAll('img').forEach(img => {
    if (!img.complete) {
      img.addEventListener('load', recalc);
      img.addEventListener('error', () => setTimeout(recalc, 200));
    }
  });

  // også observer hvis indholdets størrelse ændrer sig
  const ro = new ResizeObserver(recalc);
  ro.observe(gallery);
})();


// Mål-dato: 18. oktober 2025 kl. 00:00
  const targetDate = new Date("2025-10-18T00:00:00").getTime();

  function updateCountdown() {
    const now = new Date().getTime();
    const diff = targetDate - now;

    if (diff <= 0) {
      // Hvis vi er forbi datoen
      document.getElementById("days").textContent = "00";
      document.getElementById("hours").textContent = "00";
      document.getElementById("minutes").textContent = "00";
      clearInterval(interval);
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

    // Formatér med to cifre (fx 07 i stedet for 7)
    document.getElementById("days").textContent = String(days).padStart(2, "0");
    document.getElementById("hours").textContent = String(hours).padStart(2, "0");
    document.getElementById("minutes").textContent = String(minutes).padStart(2, "0");
  }

  // Opdater med det samme, og derefter hvert minut/sekund
  updateCountdown();
  const interval = setInterval(updateCountdown, 1000);


</script>


