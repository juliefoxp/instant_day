---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
---
<MainLayout>
<section class="container mx-auto px-4 py-8 grid grid-cols-1 md:grid-cols-12 gap-20">
    


  <!-- Kolonne 1: Header -->
  <div class="hidden md:flex md:col-span-1 justify-center">
    <!-- Lodret tekst/navigation placeholder -->
    <div class="rotate-[-90deg] origin-bottom whitespace-nowrap font-bold tracking-widest">
      INFO
    </div>
  </div>

  <!-- Kolonne 2–6: Steps -->
  <div class="md:col-span-5">
    <h1 class="text-6xl font-display mb-2">Share your instants</h1>
    <h2 class="font-sans text-xl mb-30">Ready to share your instants? How to participate</h2>

    
    <div class="flex flex-col gap-8 ">
      <!-- Step 1 -->
      <div class="flex flex-col gap-2 ">
        <h3 class="font-display text-3xl ">1. Take a photo</h3>
        <div class="flex items-center gap-4">
          <img src="/src/assets/images/blitz.png" alt="camera tegning" class="w-14 h-14 shrink-0 md:w-30 md:h-30 animate-[wiggle_2s_ease-in-out_infinite]">
          <p class="text-sm">
            Take a photo of your instant with your smartphone (or scan it for max. quality) – the file should be between 2 - 10 MB, in jpg/jpeg or webp format.
          </p>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="flex flex-col gap-2 ">
        <h3 class="text-3xl font-display">2. Fill out the form</h3>
        <div class="flex items-center gap-4">
          <img src="/src/assets/images/cloud.png" alt="upload tegning" class="w-14 h-14 shrink-0 md:w-30 md:h-30 animate-[wiggle_2s_ease-in-out_infinite]">
          <p class="text-sm">
            Upload your photo and credentials in the form.
          </p>
        </div>
      </div>

      <!-- Step 3 -->
      <div class="flex flex-col gap-2">
        <h3 class="text-3xl font-display">3. Agree to our terms</h3>
        <div class="flex items-center gap-4">
          <img src="/src/assets/images/form.png" alt="terms tegning" class="w-14 h-14 shrink-0 md:w-30 md:h-30 animate-[wiggle_2s_ease-in-out_infinite]">
          <p class="text-sm">
            Agree to our terms and conditions. The short version: Participants have to be 18+, portrayed persons must have given consent, and you agree that your instant can be exhibited and used to promote the photo contest.
          </p>
        </div>
      </div>

      <!-- Step 4 -->
      <div class="flex flex-col gap-2 md:mb-40">
        <h3 class="text-3xl font-display">4. Up to 5 submissions</h3>
        <div class="flex items-center gap-4">
          <img src="/src/assets/images/submissions.png" alt="submissions tegning" class="w-14 h-14 shrink-0 md:w-30 md:h-30 animate-[wiggle_2s_ease-in-out_infinite]">
          <p class="text-sm">
            You can make up to 5 submissions – go through step 1-3 for each submission;-)
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Kolonne 7–12: Formular -->
  <div class="md:col-span-5 md:col-start-7">
    <h2 class="text-3xl font-display md:mb-20">Submit your instant:</h2>

    <form id="instantForm" class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl">
      <!-- Venstre kolonne -->
      <div class="flex flex-col gap-4">
        <!-- Full name -->
        <div class="flex flex-col gap-2">
          <label for="name" class="font-medium">Full name:</label>
          <input type="text" id="name" name="name" class="border bg-secondary rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black">
        </div>

        <!-- Email -->
        <div class="flex flex-col gap-2">
          <label for="email" class="font-medium">E-mail:</label>
          <input type="email" id="email" name="email" class="border bg-secondary rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black">
        </div>

        <!-- Title -->
        <div class="flex flex-col gap-2">
          <label for="title" class="font-medium">Submission title:</label>
          <input type="text" id="title" name="title" class="border bg-secondary rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black">
        </div>
      </div>

      <!-- Højre kolonne -->
     <div class="flex flex-col gap-2">
  <label class="font-medium">Photo upload:</label>
  <div
    class="group border-2 border-dashed rounded flex flex-col items-center justify-center p-8 text-center bg-secondary text-sm cursor-pointer h-full hover:bg-gray-100"
  >
    <img
      src="/src/assets/images/upload.svg"
      alt="upload icon"
      class="w-8 h-8 mb-2 bg-secondary group-hover:bg-gray-100"
    >
    <p>
      Drag and drop<br>
      a photo or <span class="text-blue-600 underline">browse</span>
    </p>
  </div>
</div>

      <!-- Description (span begge) -->
      <div class="md:col-span-2 flex flex-col gap-2">
        <label for="description" class="font-medium">Submission description/story:</label>
        <textarea id="description" name="description" rows="3" class="border bg-secondary rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-black"></textarea>
      </div>

      <!-- Terms (span begge) -->
      <div class="md:col-span-2 flex flex-col gap-2">
        <label class="font-medium">Terms & conditions:</label>
        <div class="border rounded p-4 h-48 bg-secondary overflow-y-auto text-sm">
        <p><strong>By participating in the contest, you accept the following terms and conditions</strong></p>
        <br>
          <p><strong>Participation</strong></p>
        <p>The competition is open to all photographers, both amateurs and professionals, who are over 18 years old.    </p>
         <br>
          <p><strong>Instant Photo</strong></p>
        <p>Every submission has to be an analogue instant photo - not a digital montage made in a photo editing suite. The instant can be made in various ways, with analogue instant cameras, digital instant cameras like ie. the Fujifilm EVO or scan-and-print tools like ie. the Polaroid Lab. The instant photo can be manipulated with analogue processes - the organizers encourage instant photography experiments. The submission can depict the instant photo in many ways: As a flat scan without or without the instant photo frame, as a photo showing the instants in a frame, on the wall etc. The instant doesn’t need to be just one photo: It can be a panorama or collage of multiple instants that make up one submission.  </p>
         <br>
          <p><strong>Consent</strong></p>
        <p>It is prohibited to upload photographs of people who have not given consent to the publication of the image. Images of people in private or embarrassing situations, regardless of whether they are photographed in a public place, are not allowed.  </p>
         <br>
          <p><strong>Legal stuff</strong></p>
        <p>The organizers reserve the right to disqualify any participant who violates these conditions. The organizers assume no responsibility for any loss, damage or injury that may arise as a result of participation in the competition or the use of prizes. Participants release the organizers from any claim, lawsuit or liability related to their participation in the competition.    </p>
         <br>
          <p><strong>Number of submissions</strong></p>
        <p>You can enter the competition with a total of five submissions.</p>
         <br>
          <p><strong>Usage rights</strong></p>
        <p>By submitting one or more images and thereby participating in the competition, you agree that the image may be used for the promotion of the photo competition and possibly in physical exhibition spaces afterwards. The organizers will credit the participants wherever practical and reasonably possible.   </p>
         <br>
          <p><strong>Copyright</strong></p>
        <p>You must be the author of the submitted instants and have the rights to publish them. The instants must be free of third party rights. Participants retain all copyright in their submitted instants. By submitting instants to the competition, participants grant the organizers a non-exclusive license to use, reproduce and publish the submitted images in connection with the promotion of the competition, including on social media platforms, websites and printed materials. The organizers will credit the participants wherever practical and reasonable. </p>
         <br>
          <p><strong>Announcement of Winners</strong></p>
        <p>The winners of the competition will be announced on the official website and/or social media platforms of the organizers. By participating in the competition, the winners consent to the publication of their names and submitted photos for promotional purposes.    </p>
       </div>
      </div>

      <!-- Checkbox (span begge) -->
      <div class="md:col-span-2 flex items-center gap-2">
        <input type="checkbox" id="agree" name="agree" class="w-4 bg-secondary h-4">
        <label for="agree" class="text-sm ">I have read and agree to the terms and conditions</label>
      </div>

      <!-- Submit (span begge) -->
      <div class="md:col-span-2">
        
        <Button type="submit" variant="primary" size="medium" >Submit</Button>
      </div>
    </form>

    <!-- Toast -->
    <div id="toast"
         class="hidden fixed bottom-6 right-6 bg-green-600 text-white p-4 rounded shadow-lg max-w-sm text-sm opacity-0 transform translate-y-4 transition-all duration-500 ease-in-out">
      <p class="font-semibold">You’re an instant champ! Thanks for the contribution:-)</p>
      <p class="mt-2">The competition runs until October 18. Shortly after, we will review all the images, and announce a winner on October 31.</p>
      <p class="mt-2">If you’re one of the lucky winners or nominees, we will contact you by e-mail. Good luck!</p>
      <p class="mt-2 font-medium">NB! Want to make one more submission? Start the submission form over:-)</p>
    </div>
  </div>
</section>


<script>
  const form = document.getElementById("instantForm") as HTMLFormElement;

  const toast = document.getElementById('toast');

  form.addEventListener('submit', function(event) {
    event.preventDefault();

    // Her kan du tilføje validering af formularfelter, hvis nødvendigt

    // Vis toast-beskeden
    toast.classList.remove('hidden');
    setTimeout(() => {
      toast.classList.add('opacity-100', 'translate-y-0');
      toast.classList.remove('opacity-0', 'translate-y-4');
    }, 100); // Lille forsinkelse for at sikre, at klasserne anvendes korrekt

    // Skjul toast-beskeden efter 5 sekunder
    setTimeout(() => {
      toast.classList.add('opacity-0', 'translate-y-4');
      toast.classList.remove('opacity-100', 'translate-y-0');
      setTimeout(() => {
        toast.classList.add('hidden');
      }, 500); // Vent på overgangens varighed før skjulning
    }, 5000);

    // Nulstil formularen
    form.reset();
  });
</script>
  </MainLayout>